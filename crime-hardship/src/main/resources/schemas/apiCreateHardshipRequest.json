{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "apiCreateHardshipRequest.json",
  "type": "object",
  "title": "Create Hardship Request",
  "description": "Data contract for create Hardship Review request",
  "properties": {
    "repId": {
      "type": "integer",
      "description": "MAAT / Rep Id"
    },
    "cmuId": {
      "type": "integer",
      "description": "Case Management Unit Id"
    },
    "courtType": {
      "description": "The Court Type",
      "type": "object",
      "existingJavaType": "uk.gov.justice.laa.crime.hardship.staticdata.enums.CourtType"
    },
    "reviewStatus": {
      "description": "The review status",
      "type": "object",
      "existingJavaType": "uk.gov.justice.laa.crime.hardship.staticdata.enums.HardshipReviewStatus"
    },
    "reviewDate": {
      "type": "string",
      "format": "date-time",
      "description": "The hardship review date"
    },
    "userSession": {
      "type": "object",
      "description": "The current users session",
      "$ref": "common/apiUserSession.json"
    },
    "reviewReason": {
      "description": "The review reason",
      "type": "object",
      "existingJavaType": "uk.gov.justice.laa.crime.hardship.staticdata.enums.NewWorkReason"
    },
    "notes": {
      "type": "string",
      "description": "The review progress notes"
    },
    "decisionNotes": {
      "type": "string",
      "description": "The notes regarding the decision"
    },
    "financialAssessmentId": {
      "type": "integer",
      "description": "The ID of the financial assessment being updated"
    },
    "totalAnnualDisposableIncome": {
      "type": "number",
      "description": "The applicants total annual disposable income"
    },
    "otherFundingSources": {
      "type": "array",
      "description": "Other funding sources",
      "items": {
        "$ref": "common/otherFundingSources.json"
      }
    },
    "extraExpenditure": {
      "type": "array",
      "description": "Extra expenditure",
      "items": {
        "$ref": "common/extraExpenditure.json"
      }
    },
    "deniedIncome": {
      "type": "array",
      "description": "Denied income",
      "items": {
        "$ref": "common/deniedIncome.json"
      }
    },
    "solicitorCosts": {
      "type": "object",
      "description": "Solicitor cost",
      "$ref": "common/solicitorCosts.json"
    },
    "progressItems": {
      "type": "array",
      "description": "The hardship review progress details (actions taken & responses)",
      "items": {
        "$ref": "common/hardshipProgress.json"
      }
    }
  },
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "hardshipProgress.json",
  "type": "object",
  "title": "The hardship progress schema",
  "description": "Details of hardship progress",
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "FURTHER INFO",
        "ORIG APP REQUESTED",
        "ORIG APP RETURNED",
        "SOLICITOR INFORMED",
        "ADDITIONAL EVIDENCE",
        "REJECTED APP",
        "OTHER"
      ],
      "description": "The hardship review progress action codes"
    },
    "response": {
      "type": "string",
      "enum": [
        "FURTHER RECEIVED",
        "ORIGINAL RECEIVED",
        "ADDITIONAL PROVIDED"
      ],
      "description": "The hardship review progress response codes"
    },
    "dateTaken": {
      "type": "string",
      "format": "date-time",
      "description": "The date the action was taken"
    },
    "dateRequired": {
      "type": "string",
      "format": "date-time",
      "description": "The date by which an response is required"
    },
    "dateCompleted": {
      "type": "string",
      "format": "date-time",
      "description": "The date the response was received"
    }
  }
}


{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "statelessApiCreateHardshipReviewRequest.json",
  "type": "object",
  "title": "Stateless create hardship request",
  "description": "Data Contract for stateless create hardship",
  "properties": {
    "laaTransactionId": {
      "type": "string",
      "description": "The txn / correlation UUID"
    },
    "courtType": {
      "description": "The Court Type",
      "type": "string",
      "enum": ["MAGISTRATES", "CROWN_COURT"]
    },
    "reviewDate": {
      "type": "string",
      "format": "date-time",
      "description": "The hardship review date"
    },
    "financialAssessmentId": {
      "type": "integer",
      "description": "The ID of the financial assessment being updated"
    },
    "otherFundingSources": {
      "type": "array",
      "description": "Other funding sources",
      "items": {
        "$ref": "../common/otherFundingSources.json"
      }
    },
    "extraExpenditure": {
      "type": "array",
      "description": "Extra expenditure",
      "items": {
        "$ref": "../common/extraExpenditure.json"
      }
    },
    "deniedIncome": {
      "type": "array",
      "description": "Denied income",
      "items": {
        "$ref": "../common/deniedIncome.json"
      }
    }
  },
  "additionalProperties": false
}
